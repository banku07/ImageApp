<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:background="#E1F8DC">

   <include layout="@layout/image_card_layout"
       android:id="@+id/image_detail">
   </include>


   <androidx.cardview.widget.CardView
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/image_detail"
       app:cardCornerRadius="8dp"
       android:padding="6dp"
       android:elevation="8dp"
       android:layout_margin="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/user"
             android:layout_width="80dp"
             android:layout_height="80dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:background="@drawable/circular_layout"
             android:padding="4dp"
             />

         <include layout="@layout/text_layout"
             app:layout_constraintStart_toStartOf="@id/user"
             app:layout_constraintEnd_toEndOf="@id/user"
             app:layout_constraintTop_toBottomOf="@id/user"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/layout1"/>


         <include layout="@layout/text_layout"
             app:layout_constraintStart_toEndOf="@id/user"
             app:layout_constraintTop_toTopOf="@id/user"
             android:id="@+id/layout2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>



         <include  layout="@layout/heart_layout"
             android:id="@+id/herat_layout"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="24dp"
             />


         <include layout="@layout/text_layout"
             app:layout_constraintStart_toEndOf="@id/layout1"
             app:layout_constraintTop_toTopOf="@id/layout1"
             android:id="@+id/layout3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>


         <include layout="@layout/text_layout"
             app:layout_constraintStart_toEndOf="@id/layout3"
             app:layout_constraintTop_toTopOf="@id/layout3"
             android:id="@+id/layout4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <include layout="@layout/text_layout"
             app:layout_constraintStart_toEndOf="@id/layout4"
             app:layout_constraintTop_toTopOf="@id/layout4"
             android:id="@+id/layout5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </androidx.constraintlayout.widget.ConstraintLayout>





   </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>